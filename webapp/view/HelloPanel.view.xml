<mvc:View
    controllerName="com.logali.invoices.controller.HelloPanel"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Panel
        headerText="{i18n>helloPanel}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                text="{i18n>helloDialogButton}"
                press=".onOpenDialog"
                icon="sap-icon://action"
                class="sapUiSmallMarginEnd"
            />
            <Button
                text="{i18n>showHelloButton}"
                press=".onShowHello"
                class="sapUiSmallMarginEnd"
            />
            <Input
                value="{/recipient/name}"
                description="Hello {/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <Text
                text="Hello {/recipient/name}"
                class="sapUiSmalMargin boldElements"
            />
        </content>
    </Panel>
    <core:Fragment
        id="form01"
        fragmentName="com.logali.invoices.fragments.Form01"
        type="XML"
    />
</mvc:View>
