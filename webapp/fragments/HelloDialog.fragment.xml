<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}"
    >
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="4rem"
            />
        </content>
        <beginButton>
            <Button
                text="{i18n>okButton}"
                type="Emphasized"
                press=".onOkDialog"
            />
        </beginButton>

        <endButton>
            <Button
                text="{i18n>closeButton}"
                type="Reject"
                press=".onCloseDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>