<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"> 

    <Panel headerText="{i18n>panelFrTitle}"
            class="sapUiResponsiveMargin"
            width="30%">

            <content>
                <form:SimpleForm id="form" editable="true"> 
                    <Label text="{i18n>labelName}"/>
                    <Input/>

                    <Label text="{i18n>labelDate}"/>
                    <DatePicker/>
                
                </form:SimpleForm>

            
            </content>
    
    </Panel>

</core:FragmentDefinition>